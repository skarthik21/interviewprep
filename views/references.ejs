<!DOCTYPE html>
<html>
  <head>
    <title>References</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy
    +HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/qt.css">
  </head>
  <body>
    <ul class="total">
      <li>INTERVIEW</li>
      <div class="log">
        <% if(user) { %>
          <li>welcome <%= user.username %></li>
          <li><a href="/logout">logout</a></li>
          <% if(admin) {%>
            <li><a href="/admin">admin panel</a></li>
          <%}%>
        <% } else { %>
            <li><a href="/login">login</a></li>
            <li><a href="/signup">signup</a></li>
         <%}%>
      </div>
  </ul>
    <% if (result.length > 0) { %>
      <% result.forEach((ref) => { %>
      <div class="topic">
        <a class="single" href="<%= ref.link %>">
          <%= ref.topic %>
        </a>
      </div>
      <% }) %>
    <% } else { %>
      <p>There are no topics to display...</p>
    <% } %>
  </body>
</html>